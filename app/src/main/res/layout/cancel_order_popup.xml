<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:background="@drawable/white_bg"
    android:paddingBottom="8dp">


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_marginVertical="10dp"
            android:textSize="18dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:id="@+id/shopName"
            android:text="Cancel Order"
            android:layout_height="wrap_content"/>


    <View
        android:layout_marginLeft="9dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E8E7E7"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_marginVertical="10dp"
        android:textSize="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:id="@+id/changeOrder"
        android:visibility="gone"
        android:textColor="@color/cartgreen"
        android:text="* 100% amount will be charged (Non Refundable)"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


            <RadioGroup
                android:id="@+id/cancelReason"
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:text="Some items in order are not available."
                    android:textSize="15dp"
                    android:id="@+id/popularity"
                    android:layout_marginTop="10dp"
                    android:textColor="#6C6C6C"
                    android:fontFamily="@font/rubikregular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                     <RadioButton
                    android:text="I Selected an incorrect address."
                    android:textSize="15dp"
                    android:id="@+id/costL"
                    android:textColor="#6C6C6C"
                    android:fontFamily="@font/rubikregular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <RadioButton
                    android:text="Others"
                    android:textSize="15dp"
                    android:id="@+id/costH"
                    android:layout_marginBottom="20dp"
                    android:textColor="#6C6C6C"
                    android:fontFamily="@font/rubikregular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </RadioGroup>


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/cancelMsg"
            android:textColor="#222"
            android:singleLine="true"
            android:layout_marginHorizontal="5dp"
            android:backgroundTint="#888888"
            android:enabled="false"
            android:textColorHint="#888888"
            android:layout_width="match_parent"
            android:minLines="3"
            android:layout_marginTop="-20dp"
            android:inputType="textMultiLine"
            android:textSize="14dp"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            android:gravity="top|left"
            android:hint="Add Cancellation Reason!" />



            <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/cartgreen"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/white_bg"
            android:textSize="17dp"
                android:textAllCaps="false"
                android:id="@+id/cancelOrderButton"
            android:textAlignment="center"
                android:layout_marginTop="10dp"
            android:textColor="#fff"
            android:layout_height="35dp"
            android:text="Cancel Order"/>




    </LinearLayout>



</LinearLayout>

