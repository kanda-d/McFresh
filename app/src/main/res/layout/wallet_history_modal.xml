<androidx.cardview.widget.CardView
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardElevation="1dp"
    app:contentPadding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:weightSum="2"
            android:padding="4dp"
            android:background="#F4F4F4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/TDate"
                android:text="05 FEB 2020"
                android:textAllCaps="true"
                android:fontFamily="@font/rubikregular"
                android:textColor="#000"
                android:textSize="14dp"/>


            <TextView
                android:id="@+id/TType"
                android:textAlignment="textEnd"
                android:textSize="14dp"
                android:textAllCaps="true"
                android:fontFamily="@font/rubikbold"
                android:paddingRight="10dp"
                android:textColor="#7CB342"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DEBIT"/>


        </LinearLayout>


        <LinearLayout
            android:weightSum="2"
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TRemark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/rubikregular"
                android:padding="5dp"
                android:text="Amount debited from Wallet for Transfer Amount to Merchant M465891. hi"
                android:textColor="#5E5E5E"
                android:textSize="14dp" />


            <TextView
                android:id="@+id/TAmount"
                android:textSize="20dp"
                android:textAlignment="textEnd"
                android:textColor="#252525"
                android:layout_weight="1"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="+ \u20B9158"/>


        </LinearLayout>




    </LinearLayout>
</androidx.cardview.widget.CardView>
