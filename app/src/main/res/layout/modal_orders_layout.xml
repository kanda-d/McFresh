<androidx.cardview.widget.CardView
    android:layout_weight="1"
    android:layout_margin="12dp"
    android:layout_width="match_parent"
    android:id="@+id/clicktoDetails"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardCornerRadius="5dp"
    app:cardElevation="2dp"
    app:contentPadding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="130dp"
            android:id="@+id/shopIcon"
            android:src="@raw/logo"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:layout_height="50dp"/>

        <LinearLayout
            android:layout_marginLeft="8dp"
            android:layout_marginVertical="10dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/shopTitle"
                    android:textSize="14dp"
                    android:fontFamily="@font/rubikmedium"
                    android:textColor="#3C3C3C"
                    android:layout_marginTop="5dp"
                    android:text="Greener Slides   "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginTop="6dp"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:id="@+id/shopAddress"
                    android:text=" Civil Lines, Agra"
                    android:layout_marginLeft="1dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>



            </LinearLayout>


        </LinearLayout>




    </LinearLayout>

    <View
        android:layout_marginVertical="8dp"
        android:background="#39999999"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

        <LinearLayout
            android:layout_marginVertical="5dp"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:text="ITEMS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="13dp"
                    android:id="@+id/orderItems"
                    android:fontFamily="@font/rubikmedium"
                    android:textColor="#3C3C3C"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:text="ORDERED ON"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="13dp"
                    android:fontFamily="@font/rubikmedium"
                    android:textColor="#3C3C3C"
                    android:layout_marginTop="5dp"
                    android:id="@+id/orderTime"
                    android:text="30 Jun 2020 at 8:33 AM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:text="TOTAL AMOUNT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="13dp"
                    android:fontFamily="@font/rubikmedium"
                    android:textColor="#3C3C3C"
                    android:id="@+id/orderAmount"
                    android:layout_marginTop="5dp"
                    android:text="121.65"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:text="ORDER ID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="13dp"
                    android:fontFamily="@font/rubikmedium"
                    android:textColor="#3C3C3C"
                    android:id="@+id/orderID"
                    android:layout_marginTop="5dp"
                    android:text="4580948309"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>


        </LinearLayout>


        <View
            android:layout_marginVertical="10dp"
            android:background="#39999999"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
        android:weightSum="3"
        android:layout_marginHorizontal="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/orderStatus"
            android:text="Delivered"
            android:textStyle="bold" />

            <ProgressBar
                android:paddingTop="2dp"
                android:layout_width="wrap_content"
                android:layout_gravity="right|end"
                android:visibility="invisible"
                android:drawableLeft="@drawable/repeat_order"
                android:layout_height="16dp"
                android:id="@+id/repeatProgress"/>

            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_gravity="right|end"
                android:layout_height="wrap_content"
                android:id="@+id/repeatOrder"
                android:text="Repeat Or."
                android:textStyle="bold" />

            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_gravity="right|end"
                android:layout_height="wrap_content"
                android:id="@+id/cancelOrder"
                android:text="Cancel Or."
                android:visibility="gone"
                android:textStyle="bold" />


    </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>