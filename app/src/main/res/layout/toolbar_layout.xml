<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.CollapsingToolbarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:elevation="4dp"
    android:background="#4A4A4A"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/liner1"
        android:layout_marginLeft="-7dp"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <ImageView
            android:onClick="backtoActivity"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:src="@drawable/backbtn_tool" />

        <TextView
            android:textSize="15dp"
            android:id="@+id/handyTitle"
            android:textColor="#fff"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text=""/>

    </LinearLayout>



</com.google.android.material.appbar.CollapsingToolbarLayout>