<LinearLayout android:weightSum="2"
    android:layout_marginTop="-5dp"
    android:layout_marginVertical="10dp"
    android:background="#00FFFFFF"
    android:layout_width="match_parent"
    android:id="@+id/removeCart"
    android:layout_margin="12dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_weight="1"
            android:id="@+id/pro_thumb"
            android:visibility="gone"
            android:layout_marginRight="10dp"
            android:src="@raw/placeholder"
            android:layout_width="280dp"
            android:layout_height="80dp"/>

        <LinearLayout
            android:layout_marginTop="13dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_marginRight="150dp"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:id="@+id/pro_title"
                android:drawablePadding="10dp"
                android:singleLine="false"
                android:textSize="15dp"
                android:drawableLeft="@drawable/side_title"
                android:layout_height="wrap_content"
                android:text="Rice Barik Dana!"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:id="@+id/pro_desc"
                android:layout_height="0dp" />

            <TextView
                android:layout_width="wrap_content"
                android:textSize="13dp"
                android:id="@+id/pro_price"
                android:textStyle="bold"
                android:textColor="#454545"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:text="\u20B9158.00"/>

            <TextView
                android:layout_width="wrap_content"
                android:textSize="10dp"
                android:id="@+id/quantityDesc"
                android:layout_marginLeft="24dp"
                android:visibility="gone"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:text="Quantity : "/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-115dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginHorizontal="5dp"
                android:id="@+id/addtoCart"
                android:textAlignment="center"
                android:visibility="gone"
                android:paddingTop="3dp"
                android:paddingBottom="2dp"
                android:text=" Add "
                android:textStyle="bold"
                android:paddingHorizontal="10dp"
                android:backgroundTint="@color/cartgreen"
                android:textSize="12dp"
                android:background="@drawable/btn_bg_login"
                android:textColor="#fff"/>



            <LinearLayout
            android:background="@drawable/border_cart"
            android:orientation="horizontal"
            android:id="@+id/qtyBox"
            android:layout_width="wrap_content"
            android:backgroundTint="@color/cartgreen"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_height="25dp"
                android:id="@+id/removeQty"
                android:paddingHorizontal="3dp"
                android:paddingVertical="4dp"
                android:layout_width="match_parent"
                android:src="@drawable/remove_cart_btn"
                android:textStyle="bold" />


            <TextView
                android:layout_width="50dp"
                android:textSize="14dp"
                android:background="#fff"
                android:id="@+id/qtyUpdate"
                android:paddingTop="2dp"
                android:paddingHorizontal="5dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_height="match_parent"
                android:text="1"/>

            <ImageView
                android:layout_height="25dp"
                android:id="@+id/addQty"
                android:paddingVertical="4dp"
                android:paddingHorizontal="3dp"
                android:layout_width="match_parent"
                android:src="@drawable/add_cart_btn"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:textSize="11dp"
            android:id="@+id/priceUpdate"
            android:textStyle="bold"
            android:layout_marginLeft="24dp"
            android:textAlignment="textEnd"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:text="\u20B90"/>

        </LinearLayout>

    </LinearLayout>


