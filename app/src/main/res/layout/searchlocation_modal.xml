<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:background="@drawable/white_bg"
    android:paddingBottom="50dp">

    <ScrollView
        android:paddingBottom="100dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:weightSum="2"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_marginVertical="10dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/current"
                android:textSize="13dp"
                android:textStyle="bold"
                android:id="@+id/useCurrent"
                android:layout_marginLeft="10dp"
                android:text="  Use current location "
                android:layout_height="wrap_content"/>


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_marginVertical="10dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/add_cart_btn"
                android:textSize="13dp"
                android:drawableTint="#424242"
                android:textStyle="bold"
                android:id="@+id/addAddress"
                android:layout_marginLeft="8dp"
                android:text="  Add Address"
                android:layout_height="wrap_content"/>


            <View
                android:layout_marginHorizontal="15dp"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:background="#E6E6E6"
                android:layout_height="1dp"/>


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:id="@+id/savedAdddres"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:text="Saved Address"
                android:layout_marginBottom="15dp"
                android:layout_height="wrap_content"/>


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:paddingBottom="75dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <ProgressBar
                        android:layout_weight="1"
                        android:elevation="4dp"
                        android:src="@raw/loader"
                        android:layout_marginTop="100dp"
                        android:layout_gravity="center"
                        android:background="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:id="@+id/updateImgProgress"/>


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/all_saved_address"
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        android:layout_marginHorizontal="10dp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </ScrollView>







        </LinearLayout>


    </ScrollView>

</LinearLayout>

