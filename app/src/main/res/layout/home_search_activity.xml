<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#fff"
    android:focusable="true"
    android:clickable="true"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">


    <LinearLayout
        android:layout_marginTop="13dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/enterMsg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.068"
        tools:layout_editor_absoluteX="-21dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/liner1"
            android:weightSum="2"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <ImageView
                android:layout_weight="1"
                android:paddingTop="5dp"
                android:layout_width="60dp"
                android:onClick="backtoHome"
                android:layout_height="30dp"
                android:id="@+id/removeFrag"
                android:src="@drawable/backbtn_tool_black" />


            <EditText
                android:id="@+id/searchHome"
                android:layout_weight="1"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:elevation=".5dp"
                android:layout_marginHorizontal="15dp"
                android:textSize="16dp"
                android:drawablePadding="5dp"
                android:hint="Search for Shops"
                android:drawableLeft="@drawable/sidepadding"
                android:background="@drawable/search_bg"
                android:layout_width="match_parent"
                android:layout_height="35dp"/>

        </LinearLayout>


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/rubikregular"
            android:text="Most Searches"
            android:textColor="#444"
            android:textSize="18dp" />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="24X7"
                android:padding="10dp"
                android:id="@+id/t1"
                android:layout_marginHorizontal="10dp"
                android:textColor="#686868"
                android:background="@drawable/keyword_radius"
                android:textSize="14dp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:id="@+id/t2"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="20dp"
                android:text="Take away"
                android:padding="10dp"
                android:textColor="#686868"
                android:background="@drawable/keyword_radius"
                android:textSize="14dp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Home Delivery"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/t3"
                android:textColor="#686868"
                android:background="@drawable/keyword_radius"
                android:textSize="14dp" />



        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:text="Tea Point"
                android:id="@+id/t4"
                android:padding="10dp"
                android:textColor="#686868"
                android:background="@drawable/keyword_radius"
                android:textSize="14dp" />


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:text="Free Delivery"
                android:padding="10dp"
                android:id="@+id/t5"
                android:textColor="#686868"
                android:background="@drawable/keyword_radius"
                android:textSize="14dp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:text="Discounts"
                android:padding="10dp"
                android:id="@+id/t6"
                android:textColor="#686868"
                android:background="@drawable/keyword_radius"
                android:textSize="14dp" />
        </LinearLayout>




    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
