<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".HomeMenus.ActivityForFrag">



        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/rl_mainActionbar"
            android:layout_width="match_parent"
            android:weightSum="3"
            android:layout_marginTop="5dp"
            android:background="#fff"
            android:layout_height="50dp"
            tools:ignore="MissingConstraints">


            <ImageView
                android:id="@+id/cv_doctorPhoto"
                android:layout_width="wrap_content"
                android:onClick="backtoActivity"
                android:layout_height="25dp"
                android:layout_marginLeft="-40dp"
                android:layout_marginVertical="10dp"
                android:layout_toLeftOf="@+id/iv_menu"
                android:layout_weight="1"
                android:src="@drawable/backbtn_tool_black" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_marginVertical="10dp"
                android:layout_height="wrap_content"
                android:id="@+id/textHeader"
                android:textAlignment="center"
                android:fontFamily="@font/rubikmedium"
                android:text="Category"
                android:textStyle="bold"
                android:textColor="@color/cartgreen"
                android:textSize="17dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:gravity="end"
                android:layout_marginTop="-5dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <FrameLayout
                    android:layout_toRightOf="@id/tvText"
                    android:layout_centerVertical="true"
                    style="?attr/actionButtonStyle"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_cart_icon"/>



                </FrameLayout>
            </LinearLayout>



        </LinearLayout>

        <FrameLayout
            android:id="@+id/actvityforFrag"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>


</LinearLayout>