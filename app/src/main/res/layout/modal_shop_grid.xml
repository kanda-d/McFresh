<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.cardview.widget.CardView
        android:id="@+id/clickShop"
        android:layout_margin="7.5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="5dp"
        app:contentPaddingBottom="10dp"
        android:padding="0dp"
        app:cardElevation="3dp">

        <LinearLayout
            android:padding="0dp"
            android:orientation="vertical"
            android:layout_margin="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <androidx.appcompat.widget.AppCompatImageView
                android:padding="0dp"
                android:id="@+id/shop_thumb"
                android:layout_marginTop="-10dp"
                android:layout_width="match_parent"
                android:layout_height="120dp" />

            <LinearLayout
                android:layout_marginHorizontal="6dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:id="@+id/shop_title"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:layout_marginTop="3dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="1dp"
                    android:text="Chicken Biryani Half"
                    android:textColor="@color/black"/>

                <TextView
                    android:text="Mulla Ji Briyani Re.."
                    android:textSize="9dp"
                    android:id="@+id/shop_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:weightSum="2"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="7dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:id="@+id/shopRating"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="★ ★ ★ "
                    android:textColor="@color/color_button_default"/>


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/sCatDiscount"
                    android:textSize="13dp"
                    android:layout_marginEnd="50dp"
                    android:fontFamily="@font/rubikregular"
                    android:text="60% Off"
                    android:layout_marginRight="1dp"
                    android:layout_gravity="right|bottom"
                    android:textColor="#00AF08"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>



            </LinearLayout>




        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
