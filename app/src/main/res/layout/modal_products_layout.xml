<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_margin="2.5dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.cardview.widget.CardView
        android:id="@+id/clickShop"
        android:layout_margin="7.5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="5dp"
        app:contentPaddingBottom="10dp"
        android:padding="0dp"
        app:cardElevation="3dp">

        <LinearLayout
            android:padding="0dp"
            android:orientation="vertical"
            android:layout_margin="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:paddingHorizontal="5dp"
                android:id="@+id/pro_thumb"
                android:src="@drawable/ph_product"
                android:layout_width="match_parent"
                android:layout_height="120dp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/pro_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|top"
                    android:visibility="gone"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="1dp"
                    android:background="@drawable/btn_bg_login"
                    android:backgroundTint="#39BF3E"
                    android:fontFamily="@font/rubikregular"
                    android:paddingHorizontal="7dp"
                    android:paddingVertical="3dp"
                    android:text="60% Off"
                    android:textColor="#fff"
                    android:textSize="11dp" />



            </FrameLayout>


            <LinearLayout
                android:weightSum="2"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="7dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_marginHorizontal="6dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:id="@+id/pro_title"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:layout_marginTop="3dp"
                        android:textStyle="bold"
                        android:layout_marginBottom="1dp"
                        android:text="Chicken Biryani Half"
                        android:textColor="@color/black"/>

                    <TextView
                        android:text="Mulla Ji Briyani Re.."
                        android:textSize="10.5dp"
                        android:id="@+id/pro_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/pro_price"
                    android:textSize="13dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="50dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/rubikregular"
                    android:text="\u20B9 158"
                    android:layout_marginRight="1dp"
                    android:layout_gravity="right|bottom"
                    android:textColor="#434343"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

            <LinearLayout
                android:layout_marginHorizontal="10dp"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginHorizontal="5dp"
                    android:id="@+id/addtoCart"
                    android:textAlignment="center"
                    android:paddingTop="3dp"
                    android:paddingBottom="2dp"
                    android:text=" ADD "
                    android:textStyle="bold"
                    android:paddingHorizontal="10dp"
                    android:backgroundTint="@color/cartgreen"
                    android:textSize="12dp"
                    android:background="@drawable/btn_bg_login"
                    android:textColor="#fff"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/qtyBox"
                    android:visibility="gone"
                    android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                <LinearLayout
                    android:background="@drawable/border_cart"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:paddingHorizontal="1.8dp"
                    android:backgroundTint="@color/cartgreen"
                    android:layout_height="20dp">


                    <ImageView
                        android:layout_height="wrap_content"
                        android:id="@+id/removeQty"
                        android:paddingHorizontal="2dp"
                        android:layout_width="match_parent"
                        android:paddingTop="-1dp"
                        android:src="@drawable/remove_cart_btn"
                        android:textStyle="bold" />


                    <TextView
                        android:layout_width="match_parent"
                        android:textSize="12dp"
                        android:background="#fff"
                        android:id="@+id/qtyUpdate"
                        android:paddingHorizontal="15dp"
                        android:paddingTop="1dp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:layout_height="match_parent"
                        android:text="1"/>

                    <ImageView
                        android:layout_height="wrap_content"
                        android:id="@+id/addQty"
                        android:paddingHorizontal="2dp"
                        android:paddingTop="-1dp"
                        android:layout_width="match_parent"
                        android:src="@drawable/add_cart_btn"
                        android:textStyle="bold" />

                </LinearLayout>

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/priceUpdate"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:paddingTop="10dp"
                    android:gravity="center"
                    android:fontFamily="@font/rubikregular"
                    android:text="\u20B9 0"
                    android:layout_marginRight="1dp"
                    android:textColor="#434343"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>







        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
