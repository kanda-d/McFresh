<androidx.cardview.widget.CardView
    android:layout_weight="1"
    android:layout_margin="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardCornerRadius="5dp"
    app:cardElevation="2dp"
    app:contentPadding="9dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginLeft="8dp"
                android:layout_marginVertical="9dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/orderId"
                        android:textSize="14dp"
                        android:textColor="#3C3C3C"
                        android:layout_marginTop="5dp"
                        android:text="Greener Slides   "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_marginTop="6dp"
                        android:textSize="9dp"
                        android:textStyle="bold"
                        android:id="@+id/custMobile"
                        android:text=" Civil Lines, Agra"
                        android:layout_marginLeft="-2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>



            </LinearLayout>


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/orderStatus"
                    android:textSize="14dp"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"
                    android:textColor="#FFFFFF"
                    android:textAllCaps="true"
                    android:layout_marginRight="100dp"
                    android:textStyle="bold"
                    android:backgroundTint="#00897B"
                    android:background="@drawable/btn_bg_main"
                    android:layout_marginVertical="10dp"
                    android:text="Delivered"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>






        </LinearLayout>

        <View
            android:layout_marginVertical="8dp"
            android:background="#39999999"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_marginVertical="5dp"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="9dp"
                    android:textStyle="bold"
                    android:text="PICK LOC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="13dp"
                    android:id="@+id/pickLoc"
                    android:textColor="#3C3C3C"
                    android:layout_marginTop="5dp"
                    android:text="26/43 ahir para"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:textSize="9dp"
                    android:textStyle="bold"
                    android:layout_marginTop="9dp"
                    android:text="DROP LOC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="13dp"
                    android:textColor="#3C3C3C"
                    android:layout_marginTop="5dp"
                    android:id="@+id/dropLoc"
                    android:text="drop location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textSize="9dp"
                    android:textStyle="bold"
                    android:layout_marginTop="9dp"
                    android:text="TOTAL AMOUNT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="13dp"
                    android:textColor="#3C3C3C"
                    android:id="@+id/orderAmount"
                    android:layout_marginTop="5dp"
                    android:text="121.65"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:weightSum="2"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="13dp"
                android:textColor="#3C3C3C"
                android:layout_weight="1"
                android:id="@+id/orderTime"
                android:textStyle="bold"
                android:text="30 june"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="13dp"
                android:textColor="#3C3C3C"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:textStyle="bold"
                android:id="@+id/orderType"
                android:text="COD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>




    </LinearLayout>
</androidx.cardview.widget.CardView>