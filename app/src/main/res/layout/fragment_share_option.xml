<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#fff"
    android:focusable="true"
    android:clickable="true"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">


    <LinearLayout
        android:layout_marginTop="13dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/enterMsg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.068"
        tools:layout_editor_absoluteX="-21dp">



        <TextView
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="center"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="10dp"
            android:fontFamily="@font/rubikregular"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginVertical="20dp"
            android:text="Share Flado App with your Friends &amp; Family "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="13dp"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#5E5E5E"
                android:textSize="12dp"
                android:fontFamily="sans-serif-medium"
                android:id="@+id/textUpdate"
                android:text="★  "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="#606060"
                android:layout_marginHorizontal="10dp"
                android:layout_toRightOf="@id/textUpdate"
                android:lineSpacingExtra="3dp"
                android:textSize="14dp"
                android:text="Spread Flado with Love."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



        </RelativeLayout>


        <RelativeLayout
            android:layout_marginHorizontal="13dp"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#5E5E5E"
                android:textSize="12dp"
                android:fontFamily="sans-serif-medium"
                android:id="@+id/textUpdate"
                android:text="★  "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="#606060"
                android:layout_marginHorizontal="10dp"
                android:layout_toRightOf="@id/textUpdate"
                android:lineSpacingExtra="3dp"
                android:textSize="14dp"
                android:text="Earn 10 Rs. cashback on every share with your Friends &amp; Family."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



        </RelativeLayout>


        <RelativeLayout
            android:layout_marginHorizontal="13dp"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#5E5E5E"
                android:textSize="12dp"
                android:fontFamily="sans-serif-medium"
                android:id="@+id/textUpdate"
                android:text="★  "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="#606060"
                android:layout_marginHorizontal="10dp"
                android:layout_toRightOf="@id/textUpdate"
                android:lineSpacingExtra="3dp"
                android:textSize="14dp"
                android:text="Share more and get extra Discount on every Order."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



        </RelativeLayout>



        <ImageView
            android:layout_marginTop="15dp"
            android:src="@raw/share"
            android:layout_width="wrap_content"
            android:layout_height="150dp"/>


        <TextView
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginTop="12dp"
            android:id="@+id/your_code"
            android:layout_marginHorizontal="10dp"
            android:fontFamily="@font/rubikregular"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_marginVertical="20dp"
            android:text="Refferal Code :  "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>



        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:id="@+id/sharetoFriend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/btn_bg"
            android:backgroundTint="@color/cartgreen"
            android:orientation="vertical"
            android:paddingVertical="7dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/FormDispaly">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Share with Friends &amp; Family"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="16dp"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>



</ScrollView>
